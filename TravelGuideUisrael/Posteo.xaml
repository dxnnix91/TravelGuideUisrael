<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelGuideUisrael.Posteo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Postea tu experiencia en tu destino" FontSize="20" HorizontalTextAlignment="Center"/>

            
            <Entry x:Name="txtCalificacion" Placeholder="Califica tu experiencia del 1 al 5" ></Entry>
            <Entry x:Name="txtcomentario" Placeholder="Cuentanos tu experiencia" ></Entry>
            <Entry x:Name="txtfoto" Placeholder="Ingrese la foto" ></Entry>
            <Entry x:Name="txtfecha" Placeholder="Ingrese la fecha" ></Entry>
            <Picker x:Name="combousuario" Title="Usuario" SelectedIndexChanged="combousuario_SelectedIndexChanged">                
            </Picker>
            <Label x:Name="txtid" Text=""/>
            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>