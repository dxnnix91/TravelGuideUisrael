<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelGuideUisrael.Foto">
    <ContentPage.Content>
        
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>                    
                </Grid.RowDefinitions>

                <Image x:Name="imageCamera" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="buttonCamara" Text="Tomar foto" Grid.Row="1" Grid.Column="0"
                        FontSize="34" HeightRequest="122" Margin="2" Clicked="buttonCamara_Clicked"/>

            </Grid>
        
    </ContentPage.Content>
</ContentPage>