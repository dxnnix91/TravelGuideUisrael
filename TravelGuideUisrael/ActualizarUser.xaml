<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelGuideUisrael.ActualizarUser">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registro" VerticalTextAlignment="Start" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>


            <Picker x:Name="combousuario" Title="Usuario" SelectedIndexChanged="combousuario_SelectedIndexChanged"  Grid.Row="4" Grid.Column="0">
            </Picker>
            <Label x:Name="iduser" />
            <Entry x:Name="txtNombre"  Placeholder="Nombre" Grid.Row="0" Grid.Column="1"></Entry>
                <Entry x:Name="txtApellido" Placeholder="Apellido" Grid.Row="1" Grid.Column="1"></Entry>
                <Entry x:Name="txtEdad" Placeholder="Edad" Grid.Row="2" Grid.Column="1" Keyboard="Numeric"></Entry>
                <Entry x:Name="txtMail" Placeholder="Correo" Grid.Row="3" Grid.Column="1"></Entry>
                <Entry x:Name="txtClave" Placeholder="Clave" Grid.Row="4" Grid.Column="1" IsPassword="True"></Entry>
            


                <Button x:Name="btnRegistrar" Text="Actualizar Datos" Clicked="btnRegistrar_Clicked"  HorizontalOptions="Center" />
            <Button x:Name="btnEliminar" Text="Eliminar Usuario" Clicked="btnEliminar_Clicked"  HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>